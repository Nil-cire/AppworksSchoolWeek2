<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <ImageView
            android:layout_width="381dp"
            android:layout_height="338dp" app:srcCompat="@drawable/pic"
            android:id="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="32dp" android:id="@+id/nameText"
            android:text="@string/nameText"
            style="@style/profileText" app:layout_constraintEnd_toStartOf="@+id/textView2"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" android:layout_marginStart="16dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView2" android:gravity="center"
            android:background="#605353" android:textColor="#FFFFFF"/>
    <TextView
            android:text="@string/NickNameText"
            android:layout_width="0dp"
            android:layout_height="32dp" android:id="@+id/textView2"
            style="@style/profileText" app:layout_constraintStart_toEndOf="@+id/nameText"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginTop="16dp"
            android:gravity="center" android:background="#605353" android:textColor="#FFFFFF"/>
    <TextView
            android:text="@string/aboutMe"
            android:layout_width="0dp"
            android:layout_height="32dp" android:id="@+id/textView3"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView8" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="4dp"
            style="@style/profileText" android:background="#705D5D" android:foregroundGravity="center"
            android:gravity="center" android:textColor="#FFFFFF" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="@string/gender"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" style="@style/profileText"
            android:background="#FFFFFF" android:foregroundGravity="center" android:gravity="center|left"
            android:textColor="@color/colorPrimaryDark" android:layout_marginBottom="8dp"/>
    <TextView
            android:text="@string/major"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textView5"
            app:layout_constraintBottom_toTopOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" style="@style/profileText"
            android:background="#FFFFFF" android:foregroundGravity="center" android:gravity="center|left"
            android:textColor="@color/colorPrimaryDark" android:layout_marginBottom="8dp"/>
    <TextView
            android:text="@string/dotdotdot"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textView6"
            app:layout_constraintBottom_toTopOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" style="@style/profileText"
            android:background="#FFFFFF" android:foregroundGravity="center" android:gravity="center|left"
            android:textColor="@color/colorPrimaryDark" android:layout_marginBottom="8dp"/>
    <TextView
            android:text="@string/dotdotdot"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textView7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" style="@style/profileText"
            android:background="#FFFFFF" android:foregroundGravity="center" android:gravity="center|left"
            android:textColor="@color/colorPrimaryDark" android:layout_marginBottom="16dp"/>
    <TextView
            android:text="@string/name"
            android:layout_width="0dp"
            android:layout_height="50dp" android:id="@+id/textView8"
            app:layout_constraintEnd_toStartOf="@+id/textView9" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            android:gravity="center" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/nameText" style="@style/profileText"
            android:textColor="@color/colorPrimaryDark" android:background="#FFFFFF"/>
    <TextView
            android:text="@string/nickName"
            android:layout_width="0dp"
            android:layout_height="50dp" android:id="@+id/textView9"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintStart_toEndOf="@+id/textView8"
            android:layout_marginEnd="16dp" android:gravity="center" style="@style/profileText"
            android:textColor="@color/colorPrimaryDark" android:background="#FFFFFF"/>
</androidx.constraintlayout.widget.ConstraintLayout>